<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay"
    tools:context="libs.mjn.testfieldsetview.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <libs.mjn.fieldset.FieldSetView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:fsv_borderRadius="8dp"
            app:fsv_legend="Email"
            app:fsv_legendFont="lobster.ttf"
            app:fsv_legendPosition="left"
            app:fsv_legendSize="16sp">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:hint="Enter Email..."
                android:lines="1"
                android:maxLines="1"
                android:textSize="14sp"></android.support.v7.widget.AppCompatEditText>

        </libs.mjn.fieldset.FieldSetView>

        <libs.mjn.fieldset.FieldSetView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            app:fsv_borderAlpha="0.75"
            app:fsv_borderColor="#C2185B"
            app:fsv_borderRadius="12dp"
            app:fsv_borderWidth="3dp"
            app:fsv_legend="Gender"
            app:fsv_legendColor="#C2185B"
            app:fsv_legendFont="lobster.ttf"
            app:fsv_legendIcon="@drawable/ic_gender"
            app:fsv_legendIconTint="#C2185B"
            app:fsv_legendPosition="center"
            app:fsv_legendSize="16sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"/>

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Female"/>
                </RadioGroup>
            </RelativeLayout>

        </libs.mjn.fieldset.FieldSetView>

        <libs.mjn.fieldset.FieldSetView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:fsv_borderAlpha="0.5"
            app:fsv_borderColor="#039BE5"
            app:fsv_borderRadius="6dp"
            app:fsv_borderWidth="2dp"
            app:fsv_legend="رمز عبور"
            app:fsv_legendColor="#039BE5"
            app:fsv_legendFont="yekan.ttf"
            app:fsv_legendPosition="right"
            app:fsv_legendSize="16sp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:hint="حداقل ۸ حرف..."
                android:inputType="textPassword"
                android:textSize="14sp"></android.support.v7.widget.AppCompatEditText>

        </libs.mjn.fieldset.FieldSetView>

        <libs.mjn.fieldset.FieldSetView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            app:fsv_borderAlpha="0.75"
            app:fsv_legend="جنسیت"
            app:fsv_legendIcon="@drawable/ic_gender"
            app:fsv_legendDirection="rtl"
            app:fsv_legendFont="yekan.ttf"
            app:fsv_legendPosition="center"
            app:fsv_legendSize="16sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:text="مرد"/>

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layoutDirection="rtl"
                        android:text="زن"/>
                </RadioGroup>
            </RelativeLayout>

        </libs.mjn.fieldset.FieldSetView>

        <libs.mjn.fieldset.FieldSetView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:fsv_borderColor="#4CAF50"
            app:fsv_borderRadius="6dp"
            app:fsv_borderWidth="2dp"
            app:fsv_legendIcon="@drawable/ic_password"
            app:fsv_legendColor="#4CAF50"
            app:fsv_legendPosition="center">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:hint="Enter Password..."
                android:inputType="textPassword"
                android:textSize="14sp"></android.support.v7.widget.AppCompatEditText>

        </libs.mjn.fieldset.FieldSetView>

    </LinearLayout>

</ScrollView>
